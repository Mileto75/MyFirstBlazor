<div class="col col-lg-3">
    <div class="card" style="width: 18rem;">
        <!--tips: add .text-center,.text-right to the .card to change card text alignment-->
        <img src="@ProductModel.Images.First()" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@ProductModel.Title</h5>
            <h6 class="card-subtitle mb-2 text-muted">@ProductModel.Category.Name</h6>
            <p class="card-text">@ProductModel.Description</p>
        </div>
        <div class="card-footer">
            <a class="btn btn-outline-info">Info</a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public ProductModel ProductModel { get; set; }
}
